<!-- Keyboard layout switching -->
<keybind key="F2">
  <action name="Execute"><command>setxkbmap us dvorak</command></action>
</keybind>
<keybind key="F4">
  <action name="Execute"><command>setxkbmap us</command></action>
</keybind>
<keybind key="F8">
  <action name="Execute"><command>setxkbmap ru diktor</command></action>
</keybind>
<keybind key="F9">
  <action name="Execute"><command>setxkbmap ru dp</command></action>
</keybind>

<!-- xmms control -->
<!--(if r.laptop)-->
  <keybind key="A-F12">
    <action name="Execute"><command>xc next</command></action>
  </keybind>
  <keybind key="A-F11">
    <action name="Execute"><command>xc prev</command></action>
  </keybind>
  <keybind key="F12">
    <action name="Execute"><command>xc time +20</command></action>
  </keybind>
  <!-- F11 is taken by fullscreen in fx/scite -->
  <keybind key="S-F11">
    <action name="Execute"><command>xc time -20</command></action>
  </keybind>
<!--(end)-->
<!--(if not r.laptop or r.two or r.three)-->
  <keybind key="KP_Subtract">
    <action name="Execute"><command>xmmsctrl next</command></action>
  </keybind>
  <keybind key="S-KP_Subtract">
    <action name="Execute"><command>xmmsctrl prev</command></action>
  </keybind>
  <keybind key="KP_Add">
    <action name="Execute"><command>xmmsctrl time +10</command></action>
  </keybind>
  <keybind key="S-KP_Add">
    <action name="Execute"><command>xmmsctrl time -10</command></action>
  </keybind>
<!--(end)-->
<keybind key="C-S-F12">
  <action name="Execute"><command>xc togglepause</command></action>
</keybind>
